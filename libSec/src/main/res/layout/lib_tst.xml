<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_tst_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lib_row2_hgt"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    >
    <ImageView android:id="@+id/lib_ico"
        android:layout_width="@dimen/icn_siz"
        android:layout_height="@dimen/icn_siz"
        android:layout_weight="0"
        android:layout_margin="@dimen/lib_pad_hor"
        android:scaleType="fitCenter"
        tools:src="@drawable/lib_inf"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/lib_pad_hor"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">
        <TextView
            android:id="@+id/lib_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?attr/txtColBar"
            tools:text="Title"
        />
        <TextView
            android:id="@+id/lib_txt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?attr/txtColBar"
            tools:text="Description"
        />
    </LinearLayout>
</LinearLayout>