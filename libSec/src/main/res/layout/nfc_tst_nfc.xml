<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_tst_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lib_row2_hgt"
    android:background="@color/nfc_blu"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/lib_pad_hor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/lib_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/nfc_acc"
            android:text="@string/nfc_beam"
            />
        <TextView
            android:id="@+id/lib_txt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/matWht"
            android:text="@string/nfc_beam_snd"
            />
    </LinearLayout>
    <ImageView android:id="@+id/lib_ico"
        android:layout_width="@dimen/icn_siz"
        android:layout_height="@dimen/icn_siz"
        android:layout_weight="0"
        android:layout_margin="@dimen/lib_pad_hor"
        android:scaleType="fitCenter"
        android:src="@drawable/lib_sw"
        />
</LinearLayout>